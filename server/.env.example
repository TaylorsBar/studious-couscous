# Environment
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/studious_couscous

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Session
SESSION_SECRET=your-super-secret-session-key-change-in-production

# CORS
CORS_ORIGIN=http://localhost:3000

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@studious-couscous.com

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# API Keys
API_KEY_SECRET=your-api-key-secret-change-in-production

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Webhook
WEBHOOK_SECRET=your-webhook-secret-change-in-production

# External APIs
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Monitoring
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key

# Analytics
GOOGLE_ANALYTICS_ID=your-google-analytics-id

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_FILE_UPLOAD=true
ENABLE_REAL_TIME=true
ENABLE_ANALYTICS=true

# ================================
# KC SPEEDSHOP INTEGRATIONS
# ================================

# Hedera Blockchain Configuration
HEDERA_NETWORK=testnet
HEDERA_OPERATOR_ID=0.0.123456
HEDERA_OPERATOR_PRIVATE_KEY=302e020100300506032b657004220420abcdef1234567890...

# Kafka Event Streaming
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=studious-couscous
KAFKA_GROUP_ID=studious-couscous-consumers

# Salesforce CRM Integration
SALESFORCE_CLIENT_ID=your-salesforce-connected-app-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-connected-app-client-secret
SALESFORCE_LOGIN_URL=https://login.salesforce.com
SALESFORCE_USERNAME=your-salesforce-username
SALESFORCE_PASSWORD=your-salesforce-password
SALESFORCE_SECURITY_TOKEN=your-salesforce-security-token

# HubSpot CRM Integration
HUBSPOT_API_KEY=your-hubspot-private-app-access-token

# Xero Financial Integration
XERO_CLIENT_ID=your-xero-app-client-id
XERO_CLIENT_SECRET=your-xero-app-client-secret

# MYOB Financial Integration
MYOB_CLIENT_ID=your-myob-app-client-id
MYOB_CLIENT_SECRET=your-myob-app-client-secret

# Stripe Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# AML/Compliance Services
CHAINALYSIS_API_KEY=your-chainalysis-api-key
ELLIPTIC_API_KEY=your-elliptic-api-key

